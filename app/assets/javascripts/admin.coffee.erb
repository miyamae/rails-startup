$ ->

    I18n.defaultLocale = '<%= I18n.default_locale %>';
    I18n.locale = '<%= I18n.locale %>';

    $('.sysmsg').show();
    setTimeout (-> $('.sysmsg').fadeOut('slow')), 5000

    $('.btn.loading').click ->
        $(@).button('loading')
        setTimeout (=> $(@).button('reset')), 10000
