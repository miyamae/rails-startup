<!DOCTYPE html>
<html lang="ja">
  <head>
    <title><%= "#{@title} - " if @title %> <%= Const::PRODUCT %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <%= stylesheet_link_tag 'admin' %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <%= yield :head -%>
  </head>
  <body class="skin-blue">
    <%- if notice -%>
      <div class="sysmsg alert alert-info alert-dismissable">
        <span class="fa fa-info"></span>
        <button class="close" data-dismiss="alert">×</button>
        <%= notice %>
      </div>
    <%- end -%>
    <%- if alert -%>
      <div class="sysmsg alert alert-danger alert-dismissable">
        <span class="fa fa-warning"></span>
        <button class="close" data-dismiss="alert">×</button>
        <%= alert %>
      </div>
    <%- end -%>
    <header class="header">
      <a href="<%= admin_root_path %>" class="logo">
        <%= Const::PRODUCT %>
      </a>
      <nav class="navbar navbar-static-top" role="navigation">
        <a href="javascript:void(0);" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
      </nav>
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">
      <aside class="left-side sidebar-offcanvas">
        <section class="sidebar">
          <ul class="sidebar-menu">
            <%= render 'layouts/admin_menu' %>
          </ul>
        </section>
      </aside>
      <aside class="right-side">
        <%- if @title.present? || breadcrumbs.present? -%>
          <section class="content-header">
            <h1><%= @title %></h1>
            <%- if breadcrumbs.present? -%>
              <ol class="breadcrumb">
                <%= render_breadcrumbs builder: CustomBreadcrumbsBuilder %>
              </ol>
            <%- end -%>
          </section>
        <%- end -%>
        <section class="content">
          <p><%= yield :pagetool -%></p>
          <%= yield %>
        </section>
      </aside>
    </div>
    <footer>
      <div class="row">
        <div class="col-sm-12 text-center">
          <%= Const::PRODUCT %> version <%= Const::VERSION %> <%= Const::COPYRIGHT %>
        </div>
      </div>
    </footer>
    <%= javascript_include_tag 'admin' %>
    <%= javascript_include_tag 'AdminLTE/app' if Rails.env != 'test' %>
    <%= yield :foot -%>
  </body>
</html>
<!-- <%= Const::PRODUCT %> version <%= Const::VERSION %> <%= Const::COPYRIGHT %> -->
