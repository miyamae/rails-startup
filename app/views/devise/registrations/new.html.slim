- @title = t 'views.devise.registrations.new.title'
.row
  .col-sm-7
    h2 = t 'views.devise.registrations.new.for_new'
    .panel.panel-default
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
        .panel-body
          = render 'partial/errors', record: resource
          = f.bootstrap_text :email, autocomplete: 'off'
          = f.bootstrap_password :password, autocomplete: 'off'
          = f.bootstrap_password :password_confirmation, autocomplete: 'off', placeholder: t('helpers.input.password_confirmation')
        .panel-footer
          .row
            .col-sm-offset-3.col-sm-9
              button.btn.btn-primary.btn-solid type="submit"
                = t 'views.devise.registrations.new.submit'
    p
      a href=new_confirmation_path(resource_name)
        => t 'views.devise.confirmations.new.title'
        | ≫
  .col-sm-5
    = render 'devise/omniauth'
    h2 = t 'views.devise.registrations.new.for_registered'
    p
      a href=new_session_path(resource_name)
        => t 'views.devise.sessions.new.title'
        | ≫
