<%- url = confirmation_url(@resource, confirmation_token: @token) -%>
<%- if @resource.unconfirmed_email -%>
<%= t 'views.devise.mailer.confirmation_instructions.change_email.body', user: @resource.screen_name, product: Const::PRODUCT, email: @resource.unconfirmed_email, url: url %>
<%- else -%>
<%= t 'views.devise.mailer.confirmation_instructions.new_user.body', user: @resource.screen_name, product: Const::PRODUCT, email: @resource.unconfirmed_email, url: url %>
<%- end -%>


<%= t 'views.devise.mailer.ignore' %>

