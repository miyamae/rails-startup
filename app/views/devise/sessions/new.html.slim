- @title = t 'views.devise.sessions.new.title'
.row
  .col-sm-7
    h2 = t 'views.devise.sessions.new.title'
    .panel.panel-default
      = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
        .panel-body
          = f.bootstrap_text :email
          = f.bootstrap_password :password
          - if devise_mapping.rememberable?
            .row
              .col-sm-offset-3.col-sm-9
                .checkbox
                  label
                    = f.check_box :remember_me
                    = t 'views.devise.sessions.new.remember_me'
        .panel-footer
          .row
            .col-sm-offset-3.col-sm-9
              button.btn.btn-primary.btn-solid type="submit"
                = t 'views.devise.sessions.new.submit'
    p
      a href=new_password_path(resource_name)
        => t 'views.devise.passwords.new.title'
        | ≫
  .col-sm-5
    = render 'devise/omniauth'
    h2 = t 'views.devise.registrations.new.title'
    p
      a href=new_registration_path(resource_name)
        => t 'views.devise.registrations.new.title'
        | ≫
