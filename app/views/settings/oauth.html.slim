    a.btn.btn-default.btn-primary href=redirect_oauth_path(:twitter)
      = t 'views.settings.oauth.connect', provider: 'Twitter'

- if ENV['google_client_id'].present?
  h2 = t 'views.settings.oauth.provider_title', provider: 'Google'
  - if current_user.google_uid.present?
    p = t 'views.settings.oauth.already_connected', provider: 'Google'
    a.btn.btn-default.btn-danger href=settings_oauth_remove_path(:google)
